.main
  // Sign up form
  section.signup
    .container
      .signup-content
        .signup-form
          h2.form-title Registar
          form#register-form.register-form(method='POST' action='/registar')
            //- Email
            .form-group
              label(for='email')
                i.zmdi.zmdi-email
              input#email(type='email' name='email' placeholder='Email')
            //- Password
            .form-group
              label(for='password')
                i.zmdi.zmdi-lock
              input#pass(type='password' name='password' placeholder='Password')
            .form-group.form-button
              input#signup.form-submit(type='submit' value='Registar')
        .signup-image
          figure
